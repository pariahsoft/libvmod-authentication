varnishtest "Test basic HTTP authentication vmod (file)"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import authentication from "${vmod_topbuild}/src/.libs/libvmod_authentication.so";
	sub vcl_recv {
		set req.http.Authorization = "Basic YWRtaW46dGVzdA==";
	}
	sub vcl_deliver {
		set resp.http.result = authentication.match_file("${vmod_topbuild}/src/tests/pass.txt");
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.result == true
}

client c1 -run

